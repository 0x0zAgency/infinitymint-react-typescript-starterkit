{
  "compilerOptions": {
    "target": "ES2017",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "rootDirs": ["./src"],
    "paths": {
      "@app/*": ["./node_modules/infinitymint/dist/app/*"],
      "@client/*": ["./node_modules/infinitymint/dist/client/*"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "dist",
    "node_modules",
    "gems/__",
    "gems/__cache",
    "gems/@",
    "projects"
  ],
  "include": [
    "./src",
    "./client",
    "./app",
    "./gems",
    "./scripts",
    "./deploy",
    "./imports",
    "./examples",
    "./typechain-types",
    "./index.ts"
  ],
  "files": ["./hardhat.config.ts", "./index.ts"]
}
